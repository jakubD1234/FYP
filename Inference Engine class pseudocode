Inference Engine class 
PROCEDURE InferenceEng 
FUNCTION Integer calcQuantity(char ID){		

		Integer productnum= UserInterface. Finalinput chat at 1
		Integer seasonnum= UserInterface. Finalinput chat at 3 		
	IF ID='1' THEN
		CalcQuaSize(productnum,seasonnum,'1',5);
		CalcQuaSize(productnum,seasonnum,'2',5.5);
		CalcQuaSize(productnum,seasonnum,'3',6);
		CalcQuaSize(productnum,seasonnum,'4',6.5);
	ELSE IF ID='2'THEN
		CalcQuaSize(productnum,seasonnum,'1',4);
		CalcQuaSize(productnum,seasonnum,'2',3.5);
		CalcQuaSize(productnum,seasonnum,'3',3);
		CalcQuaSize(productnum,seasonnum,'4',2.5);	
	END IF
RETURN(quantity);
END calcQuantity 

FUNCTION CalcQuaSize(int pnum,int snum,char val,double multi) {
		IF UserInterface. Finalinput chat at 2=val THEN
			quantity= ProductAverageOrder*StocklevelMultiplier*Season
		END IF
END CalcQuaSize







FUNCTION String findcussup(Integer BuyOrSell) {
